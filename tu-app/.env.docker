# =============================================================================
# Docker Environment Configuration
# Copy this file to .env before running docker compose up
# =============================================================================

APP_NAME="TU SD System"
APP_ENV=production
APP_KEY=base64:GENERATE_NEW_KEY_WITH_artisan_key_generate
APP_DEBUG=false
APP_URL=http://localhost:8080

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database - Docker service name
DB_CONNECTION=pgsql
DB_HOST=db
DB_PORT=5432
DB_DATABASE=tu_sd_system
DB_USERNAME=tu_admin
DB_PASSWORD=secret123

# Cache and Session
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Docker-specific settings
APP_PORT=8080
DB_PORT=5433
MIGRATE_ON_START=false
